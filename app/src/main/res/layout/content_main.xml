<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/babyblue"
    android:focusableInTouchMode="true"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".calorietracker.CalorieActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/activity_level"
        android:layout_alignLeft="@+id/activity_level"
        android:layout_marginTop="96dp"
        android:text="Height"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00BCD4" />

    <Spinner
        android:id="@+id/height_feet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/textView2"
        android:layout_toLeftOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/height_feet"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/height_in"
        android:layout_toLeftOf="@+id/height_in"
        android:text="ft"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#00BCD4" />

    <Spinner
        android:id="@+id/height_in"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/textView8"
        android:layout_toLeftOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignTop="@+id/textView2"
        android:text="in"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#00BCD4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:text="Tell me about yourself."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#00BCD4"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/adamina" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/height_in"
        android:layout_toStartOf="@+id/textView6"
        android:layout_toLeftOf="@+id/textView6"
        android:text="Weight"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00BCD4" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/height_in"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/textView6"
        android:layout_toLeftOf="@+id/textView6"
        android:ems="10"
        android:inputType="number"
        android:textColor="#00BCD4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/activity_level"
        android:layout_toRightOf="@+id/activity_level"
        android:text="lbs"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#00BCD4" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Activity Level"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00BCD4" />

    <Spinner
        android:id="@+id/activity_level"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_level"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Goal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00BCD4" />

    <Spinner
        android:id="@+id/goal"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#00BCD4"
        android:onClick="saveAction"
        android:radius="10dp"
        android:text="Save"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gender"
        android:layout_alignStart="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:text="Gender"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00BCD4" />

    <Spinner
        android:id="@+id/gender"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textView5"
        android:layout_alignStart="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gender"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:text="Age"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00BCD4" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignTop="@+id/gender"
        android:layout_marginLeft="3dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="number" />

</RelativeLayout>
